    ViewBag.Title = "Convidado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model List<MinhaTerceiraAplicacaoMVC.Models.ConvidadoModel>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Home</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="..\..\Content\Css\festa.frontend.views.convidado.index.css" />
    
</head>
<body>
        
    <div class="container">
        
        <div class="areaOpcao">
            <div class="cabecalhoAreaOpcao">
                
                <div class="voltar"><a href="..\home\home">@Html.Raw(File.ReadAllText(Server.MapPath("~/Content/Images/back.svg")))</a></div>
                Convidado
